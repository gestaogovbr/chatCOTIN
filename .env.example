# Configurações de Environment - Template para DevOps
# =================================================================
# TEMPLATE DE VARIÁVEIS DE AMBIENTE - PARA EQUIPE DE DEVOPS
# =================================================================

# Django Core Settings
DEBUG=False
SECRET_KEY=your-super-secret-key-here-minimum-50-chars-change-in-production
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-azure-app.azurewebsites.net

# Database Configuration (Azure PostgreSQL)
DATABASE_URL=postgres://username:password@hostname:port/database_name

# Databricks Configuration
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=your-databricks-token-here
DATABRICKS_MODEL_ENDPOINT=databricks-llama-4-maverick

# Azure Specific (opcional - conforme necessidade)
# AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
# AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
# AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;...

# Email Configuration (se necessário)
# EMAIL_HOST=smtp.your-email-provider.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@domain.com
# EMAIL_HOST_PASSWORD=your-email-password
# EMAIL_USE_TLS=True

# Logging Level (opcional)
# LOG_LEVEL=INFO